{
  "_comment": "Arquivo de configuração para conexão MySQL do HomeGuard",
  "_instructions": [
    "Este arquivo é criado automaticamente pelo script install_mysql_homeguard.sh",
    "Para configuração manual, copie este arquivo para ~/homeguard_mysql_config.json",
    "Ajuste os parâmetros conforme sua instalação MySQL",
    "IMPORTANTE: Configure permissões 600 para proteger a senha"
  ],
  
  "mysql": {
    "host": "localhost",
    "port": 3306,
    "database": "homeguard",
    "user": "homeguard",
    "password": "ALTERE_ESTA_SENHA",
    "charset": "utf8mb4",
    "autocommit": true,
    "ssl_disabled": true,
    "connection_timeout": 30,
    "pool_size": 5,
    "pool_reset_session": true
  },
  
  "application": {
    "name": "HomeGuard Dashboard MySQL",
    "version": "2.0",
    "debug": false,
    "flask_host": "0.0.0.0",
    "flask_port": 5000
  },
  
  "database_settings": {
    "auto_create_tables": true,
    "migration_enabled": true,
    "backup_enabled": true,
    "backup_retention_days": 7,
    "alert_thresholds": {
      "temperature": {
        "min": 10,
        "max": 35,
        "unit": "°C"
      },
      "humidity": {
        "min": 30,
        "max": 80,
        "unit": "%"
      }
    }
  },
  
  "security": {
    "require_ssl": false,
    "allowed_hosts": ["localhost", "192.168.18.0/24"],
    "session_timeout": 3600,
    "max_login_attempts": 5
  },
  
  "monitoring": {
    "enable_performance_logging": true,
    "slow_query_threshold": 1.0,
    "connection_pool_monitoring": true,
    "health_check_interval": 300
  },
  
  "backup": {
    "enabled": true,
    "directory": "/home/pi/backup/mysql",
    "retention_days": 7,
    "compress_backups": true,
    "backup_schedule": {
      "daily": "02:00",
      "weekly": "Sunday 03:00"
    }
  },
  
  "installation": {
    "date": "SERÁ_DEFINIDO_NA_INSTALAÇÃO", 
    "raspberry_pi": true,
    "mysql_version": "AUTO_DETECTADO",
    "remote_access": true,
    "ssl_enabled": false
  }
}
